

<h1>Locations <%= link_to "(+)", new_location_path %></h1>

<ul>
  <% @locations.each do |location| %>
      <h3><%= link_to location.name, location %></h3>
      <p><%= link_to 'Edit', edit_location_path(location) %> | <%= link_to 'Delete', location_path(location),
                                              method: :delete,
                                              data: { confirm: 'Are you sure?' } %>
      </p>

  <% end %>
</ul>

<div class="nav">
  <h2><%= link_to "Home Page", main_index_path, class: "link" %>
</div>
